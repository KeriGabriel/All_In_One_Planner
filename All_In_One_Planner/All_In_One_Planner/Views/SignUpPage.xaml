<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="All_In_One_Planner.Views.SignUpPage">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="All-In-One Planner" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Sign Up" FontSize="30" HorizontalTextAlignment="Center" Padding="30,10,30,0"/>
            <Entry Placeholder="Name" PlaceholderColor="DimGray"></Entry>
            <Entry Placeholder="Username" PlaceholderColor="DimGray"></Entry>
            <Entry IsPassword="True" Placeholder="Password" PlaceholderColor="DimGray"></Entry>
            <Button VerticalOptions="Center" Text="Login" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>